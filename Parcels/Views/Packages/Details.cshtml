@{
  Layout = "_Layout";
}
@model Parcels.Models.Package;
<h2>Package Details</h2>
<hr/>
<div class="row">
  <div class="col-6">
    <h4>Sender Details</h4>
    <hr/>
    <p><strong>@Html.DisplayNameFor(package => package.Sender.Name)</strong>: @Html.DisplayFor(package => package.Sender.Name)</p>
    <p><strong>@Html.DisplayNameFor(package => package.Sender.Address)</strong>: @Html.DisplayFor(package => package.Sender.Address)</p>
  </div>
  <div class="col-6">
    <h4>Package Details</h4>
    <hr/>
    <p><strong>@Html.DisplayNameFor(package => package.Description)</strong>: @Html.DisplayFor(package => package.Description)</p>
    <p><strong>@Html.DisplayNameFor(package => package.Height)</strong>: @Html.DisplayFor(package => package.Height)</p>
    <p><strong>@Html.DisplayNameFor(package => package.Length)</strong>: @Html.DisplayFor(package => package.Length)</p>
    <p><strong>@Html.DisplayNameFor(package => package.Weight)</strong> : @Html.DisplayFor(package => package.Weight)</p>
    <p><strong>@Html.DisplayNameFor(package => package.Width)</strong>: @Html.DisplayFor(package => package.Width)</p>
  </div>
</div>



<p>@Html.ActionLink("Edit a Package", "Edit", new { id = Model.PackageId })</p>
<p>@Html.ActionLink("Delete a Package", "Delete", new { id = Model.PackageId })</p>