@{
  Layout = "_Layout";
}

<h1>Packages</h1>
<hr />

@using Parcels.Models;

@if(@Model.Count == 0)
{
  <p>There are no packages in the database under this sender.</p>
}
else 
{
  <ul>
    @foreach(Package entry in Model)
    {
      <li>@Html.ActionLink($"{entry.Description}", "Details", new { id = entry.PackageId })</li>
    }
  </ul>
}
<p>@Html.ActionLink("Add a Package", "Create")</p>
