@{
  Layout = "_Layout";
}

@model Parcels.Models.Package

<h4>Edit a package</h4>

<p>Edit this package's details: @Html.DisplayFor(entry => entry.Description)</p>

@using (Html.BeginForm())
{
  @Html.HiddenFor(entry => entry.PackageId)

  <div class="row">
    <div class="col-6">
      <h4>@Html.LabelFor(model => model.Sender)</h4>
      @Html.DropDownList("SenderId")
      <br />
      <h4>@Html.LabelFor(entry => entry.Description)</h4>
      @Html.EditorFor(entry => entry.Description)
    </div>
    <div class="col-6">
      <h3>Dimensions:</h3>      
      <h4>@Html.LabelFor(entry => entry.Height)</h4>
      @Html.EditorFor(entry => entry.Height)
      <h4>@Html.LabelFor(entry => entry.Length)</h4>
      @Html.EditorFor(entry => entry.Length)
      <h4>@Html.LabelFor(entry => entry.Weight)</h4>
      @Html.EditorFor(entry => entry.Weight)
      <h4>@Html.LabelFor(entry => entry.Width)</h4>
      @Html.EditorFor(entry => entry.Width)
      <br/>
    </div>
  </div>
  <input type="submit" value="Save Changes" class="btn btn-primary" />
}
  <p>@Html.ActionLink("Back to Packages", "Index")</p>
  
  

  
  
  










  

