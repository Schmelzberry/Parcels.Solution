@{
  Layout = "_Layout";
}

@model Parcels.Models.Sender;
@using Parcels.Models;
@using System.Collections.Generic;

<h1>Sender Details</h1>
<hr/>
<h4><strong>@Html.DisplayNameFor(model => model.Name)</strong>: @Html.DisplayFor(model => model.Name)</h3>
<h4><strong>@Html.DisplayNameFor(model => model.Address)</strong>: @Html.DisplayFor(model => model.Address)</h4>
<hr/>
@if(@Model.Packages.Count == 0)
{
  <p>This sender does not have any registered packages.</p>
}
else
{
  <p>This sender has the following packages:</p>
  <ul>
    @foreach(Package entry in Model.Packages)
    {
      <li>@Html.ActionLink($"{@entry.Description}", "Details", "Packages", new { id = entry.PackageId})</li>
    }
  </ul>
}
<hr/>
<p>@Html.ActionLink("Edit sender details", "Edit", new { id = Model.SenderId})</p>
<p>@Html.ActionLink("Delete sender", "Delete", new { id = Model.SenderId})</p>
<p>@Html.ActionLink("Add new package", "Create", "Packages")</p>